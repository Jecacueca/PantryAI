<li><%= item.name %> || <%= link_to "edit", edit_item_path(item) %> ||
    <%= link_to "delete",
      item_path(item),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure? Item will also be removed from the shopping list"}
    %>
    <% if params[:controller] == "pantries"  %>
      <%= link_to "add to shopping list", add_to_list_path(item), data: { turbo_method: :patch } %>
    <% end %>
</li>
